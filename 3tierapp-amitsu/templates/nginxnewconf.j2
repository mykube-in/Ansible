upstream appservers {
    {% for item in groups.appserver %}
    server {{ item }}:{{ appserverport | default(8080) }};
    {% endfor %}
}
server {
        listen {{ nginxport | default(80) }} default_server;
        listen [::]:{{ nginxport | default(80) }} default_server;
        root /var/www/html;
        index index.html index.htm index.nginx-debian.html;
        server_name _;
        location / {
            proxy_pass http://appservers;
        }
}
